{
    "compilerOptions": {
        "importHelpers": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}